# Configuration Django - GestionSTOCK
# Copiez ce fichier en .env et remplissez avec vos vraies valeurs
# NE JAMAIS COMMITER le fichier .env sur GitHub !

# Django Settings
SECRET_KEY=votre-cle-secrete-django-ici-generer-une-nouvelle
DEBUG=True

# Database (si vous utilisez PostgreSQL ou MySQL)
# DATABASE_NAME=gestionstock
# DATABASE_USER=votre_utilisateur
# DATABASE_PASSWORD=votre_mot_de_passe
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# Email Configuration
# En dev, le backend par défaut peut être la console. Pour écrire les e-mails
# dans des fichiers, activez `EMAIL_FILE_BASED=True` (voir ci-dessous).
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=votre-email@gmail.com
EMAIL_HOST_PASSWORD=votre-mot-de-passe-application-gmail

# Ecrire les e-mails dans des fichiers (utile pour tester sans envoyer de vrais e-mails)
# - Copiez ce fichier en `.env` et mettez `EMAIL_FILE_BASED=True` pour activer
# - Les fichiers seront écrits dans le dossier `sent_emails/` à la racine du projet
EMAIL_FILE_BASED=False

# Autres configurations
ALLOWED_HOSTS=localhost,127.0.0.1
